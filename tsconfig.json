{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "src",
		// 设置文件查找的基准路径，可以用于解决烦人的 "../../"
		"baseUrl": "src",
		"jsx": "react-jsx",
		"declaration": true,
		"esModuleInterop": true,
		"paths": {
			"@runtime": ["runtime/index.ts"]
		}
	},
	"include": ["src"]
}